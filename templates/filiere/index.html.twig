{% extends 'base.html.twig' %}

{% block title %}Les Filieres{% endblock %}

{% block body %}
    <h1>Les Filieres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Cycle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for filiere in filieres %}
            <tr>
                <td>{{ filiere.id }}</td>
                <td>{{ filiere.title }}</td>
                <td>{{ filiere.slug }}</td>
                <td>{{ filiere.description }}</td>
                <td>
                    <a href="{{ path('app_filiere_show', {'id': filiere.id}) }}">show</a>
                    <a href="{{ path('app_filiere_edit', {'id': filiere.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_filiere_new') }}">Create new</a>
{% endblock %}
