{% extends 'base.html.twig' %}

{% block title %}StudentBook{% endblock %}

{% block body %}
    <h1>StudentBook</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student_book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ student_book.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ student_book.description }}</td>
            </tr>
            <tr>
                <th>StudentFullName</th>
                <td>{{ student_book.studentFullName }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ student_book.year ? student_book.year|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FileUrl</th>
                <td>{{ student_book.fileUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_book_index') }}">back to list</a>

    <a href="{{ path('app_student_book_edit', {'id': student_book.id}) }}">edit</a>

    {{ include('student_book/_delete_form.html.twig') }}
