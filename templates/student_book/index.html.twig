{% extends 'base.html.twig' %}

{% block title %}StudentBook index{% endblock %}

{% block body %}
    <h1>StudentBook index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>StudentFullName</th>
                <th>Year</th>
                <th>FileUrl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student_book in student_books %}
            <tr>
                <td>{{ student_book.id }}</td>
                <td>{{ student_book.title }}</td>
                <td>{{ student_book.description }}</td>
                <td>{{ student_book.studentFullName }}</td>
                <td>{{ student_book.year ? student_book.year|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ student_book.fileUrl }}</td>
                <td>
                    <a href="{{ path('app_student_book_show', {'id': student_book.id}) }}">show</a>
                    <a href="{{ path('app_student_book_edit', {'id': student_book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_book_new') }}">Create new</a>
{% endblock %}
