{% extends 'base.html.twig' %}

{% block title %}
  ISTM Accueil
{% endblock %}
{% block slider %}
  <div id="carouselExampleIndicators"
    class="carousel slide"
    data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators"
        data-slide-to="0"
        class="active">
      </li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100"
          src="/_assets/images/slider/1.jpg"
          alt="First slide" />
        <div class="carousel-caption d-none d-md-block">
          <div class="carou">
            <h1>
              Etude par la pratique
            </h1>
            <p>
              Les nouveaux sont directement initie aux outils medicaux
            </p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100"
          src="/_assets/images/slider/2.jpg"
          alt="Second slide" />
        <div class="carousel-caption d-none d-md-block">
          <div class="carou">
            <h1>
              3e cycle a l'ISTM Uvira
            </h1>
            <p>
              ISTM Uvira a ouvert la porte pour la 3e cycle en Technique
              Pharmaceutique
            </p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100"
          src="/_assets/images/slider/3.jpg"
          alt="Third slide" />
        <div class="carousel-caption d-none d-md-block">
          <div class="carou">
            <h1>
              Laboratoire ouvert au public
            </h1>
            <p>
              Nous disposons aussi d'un labo ouvert
            </p>
          </div>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
{% endblock %}

{% block body %}
  <div class="programs">
    <div class="container">
      <div class="all-programs flex gap-10">
        <div class="program-item">
          <h2 class="program-title">
            Programme de 1er Cycle
          </h2>
          <p class="program-text">
            Obtention de diplome de graduat dans differents Filiere de la
            Medecine
          </p>
          <a href="" class="button">
            Voir les programmes de 1<sup>er</sup>cycle
          </a>
        </div>
        <div class="program-item">
          <h2 class="program-title">
            Programmes de 2<sup>e</sup> cycle
          </h2>
          <p class="program-text">
            Obtention de diplome de Licence dans differents Filiere de la
            Medecine
          </p>
          <a href="" class="button">
            Voir les programmes de 2<sup>e</sup> cycle
          </a>
        </div>
        <div class="program-item">
          <h2 class="program-title">
            Admission
          </h2>
          <p class="program-text">
            Processus d'admission, coûts des études, formulaire de demande
          </p>
          <a href="/programmes/second-cycle" class="button">
            Tout savoir sur pour l'admission
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="istm-chiffres">
    <div class="container">
      <div class="all-istm-chiffre flex">
        <div class="istm-chiffre-item">
          <strong class="chiffre-item-title">3</strong>
          <span class="chiffre-item-txt">campus</span>
        </div>
        <div class="istm-chiffre-item">
          <strong class="chiffre-item-title">8</strong>
          <span class="chiffre-item-txt">Filiere</span>
        </div>
        <div class="istm-chiffre-item">
          <strong class="chiffre-item-title">+10 000</strong>
          <span class="chiffre-item-txt">Etudiants</span>
        </div>
        <div class="istm-chiffre-item">
          <strong class="chiffre-item-title">+50</strong>
          <span class="chiffre-item-txt">Personnels</span>
        </div>
        <div class="istm-chiffre-item">
          <strong class="chiffre-item-title">+10</strong>
          <span class="chiffre-item-txt">ans d'experience</span>
        </div>
      </div>
      <div class="btn-donnee-chiffre">
        <a href="" class="bouton-transparent-large">Découvrir l'ISTM</a>
      </div>
    </div>
  </div>
  <div class="news-board">
    <div class="container">
      <h1>
        Actualités
      </h1>
      <div class="all-news-item flex">
        <div class="top-news flex">
        {% for article in articles|slice(-2)|reverse %}
          <a href="" class="news-item">
              <img src={{ article.imageUrl }} alt="" />
              <div class="news-legende">
                <div class="author">
                  <div class="author-avatar">
                    <img src={{ article.author.profile.picture }} alt="">
                  </div>
                  <div class="ac flex">
                    <h4 class="author-name">{{ article.author.fullName }}</h4>
                    <div class="createdat">{{ article.createdAt | date("d/m/Y")  }}</div>
                  </div>
                </div>
                <h2 class="news-title">
                  {{ article.title }}
                </h2>
              </div>
          </a>
        {% endfor %}
        </div>
    </div>
      <div class="btn-donnee-actu">
        <a href="" class="bouton-transparent-large">
          Voir toutes les actualités
        </a>
      </div>
  </div>
  </div>
  <div class="istm-calendar">
    <h1>
      Calendrier
    </h1>
    <div class="container">
      <div class="all-calendar-items flex">
      {% for event in events|slice(-3)|reverse %}
        <div class="calendar-item flex">
          <div class="calendar-item-right flex">
            <div class="day">
              {{ event.startDate | date("d") }}
            </div>
            <div class="month">
              {{ event.startDate | date("m") }}
            </div>
          </div>
          <div class="calendar-item-left flex">
            <div class="date-complet">
              {{ event.startDate | date("d/m/Y") }}
            </div>
            <div class="heure-complet">
              {{ event.endDate | date("d/m/Y") }}
            </div>
            <a href="" class="event-title">{{ event.title }}</a>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
    <div class="btn-donnee-chiffre">
      <a href="" class="bouton-transparent-large">Voir tous les événements</a>
    </div>
  </div>
