{% block title %}
  Filiere - ISTM Uvira {{ filiere.title }}
{% endblock %}

{% block body %}
{% block filieres_right %}
  <div class="single-domaine">
    <div class="container">
      <div class="card mb-4">
        <img class="card-img-top"
          src="{{ filiere.imageUrl }}"
          alt="Card image cap" />
        <div class="card-body">
          <h5 class="card-title">
            Fili√®re de {{ filiere.title }}
          </h5>
          <p class="card-text">
          {% if filiere.description is not empty %}
            {{ filiere.description | raw }}
          {% else %}
            <h6>Aucune description pour le moment</h6>
          {% endif %}
          </p>
          <p class="card-text">
            <small class="text-muted">Dernier mis a jour 3 mins</small>
          </p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% endblock %}